<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="InventoryMobile.Components.FlyoutHeader"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="this">
    <FlexLayout HeightRequest="100" JustifyContent="Center">
        <FlexLayout.Background>
            <LinearGradientBrush>
                <GradientStop Offset="0.1" Color="{StaticResource TitleBarBackGroudColor}" />
                <GradientStop Offset="1.0" Color="Green" />
            </LinearGradientBrush>
        </FlexLayout.Background>
        <Label
            HorizontalOptions="Center"
            Text="{Binding Source={x:Reference this}, Path=Email}"
            TextColor="White"
            VerticalOptions="Center" />
    </FlexLayout>
</ContentView>
