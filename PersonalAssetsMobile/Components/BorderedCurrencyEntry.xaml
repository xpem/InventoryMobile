<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="PersonalAssetsMobile.Components.BorderedCurrencyEntry"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="this"
    Margin="0,5,0,0">
    <ContentView.Content>
        <VerticalStackLayout>
            <Label Style="{StaticResource LblHEntry}" Text="{Binding Source={x:Reference this}, Path=LabelText}" />
            <Border Style="{StaticResource EntryBorders}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="5" />
                </Border.StrokeShape>
                <Entry
                    x:Name="EntryCurrency"
                    Keyboard="Numeric"
                    Style="{StaticResource Entry}"
                    Text="{Binding Source={x:Reference this}, Path=Text}"
                    TextChanged="EntryCurrency_TextChanged" />
            </Border>
        </VerticalStackLayout>
    </ContentView.Content>
</ContentView>
