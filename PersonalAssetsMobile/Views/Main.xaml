                    <DataTemplate  x:DataType="model:ItemStatus">
                        <Button Text="{Binding Name}" Clicked="Button_Clicked"/>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>
        </ScrollView>
